<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="khw15.eventsdicoding.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_upcoming"
        android:name="khw15.eventsdicoding.ui.fragments.UpcomingFragment"
        android:label="fragment_upcoming"
        tools:layout="@layout/fragment_event_list" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="khw15.eventsdicoding.ui.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_event_list" />

    <fragment
        android:id="@+id/navigation_finished"
        android:name="khw15.eventsdicoding.ui.fragments.FinishedFragment"
        android:label="fragment_finished"
        tools:layout="@layout/fragment_event_list" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="khw15.eventsdicoding.ui.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>